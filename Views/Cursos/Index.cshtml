<div class="welcome">Gestiona todos los cursos y asigna docentes</div>

<div class="flex-container">
    <a asp-action="Create" class="btn btn-success">Crear Nuevo Curso</a>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Volver al Panel</a>
</div>

@model IEnumerable<SistemaAcademico.Models.Curso>
@{
    ViewData["Title"] = "Cursos";
}

<h2 class="text-center mb-3">Gestiona todos los cursos y asigna docentes</h2>

<div style="display:flex; justify-content:center; gap:15px; flex-wrap:wrap;">
    <a asp-action="Create" class="btn btn-success btn-lg">Crear Nuevo Curso</a>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary btn-lg">Volver al Panel</a>
</div>

<hr />

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre del Curso</th>
            <th>Docente</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var curso in Model)
        {
            <tr>
                <td>@curso.CursoId</td>
                <td>@curso.Nombre</td>
                <td>@curso.Docente?.Nombre</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@curso.CursoId" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@curso.CursoId" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
