@model SistemaAcademico.Models.Matricula

@{
    ViewData["Title"] = "Detalles Matrícula";
}

<h1>Detalles de la Matrícula</h1>

<div>
    <p><strong>Estudiante:</strong> @Model.Estudiante?.Nombre</p>
    <p><strong>Curso:</strong> @Model.Curso?.Nombre</p>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.MatriculaId" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
</p>
