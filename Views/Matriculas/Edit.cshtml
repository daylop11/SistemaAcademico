@model SistemaAcademico.Models.Matricula

@{
    ViewData["Title"] = "Editar Matrícula";
}

<h1>Editar Matrícula</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MatriculaId" />

    <div class="form-group mb-3">
        <label asp-for="EstudianteId">Estudiante</label>
        <select asp-for="EstudianteId" class="form-control" asp-items="ViewData[" EstudianteId"]"></select>
        <span asp-validation-for="EstudianteId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="CursoId">Curso</label>
        <select asp-for="CursoId" class="form-control" asp-items="ViewData[" CursoId"]"></select>
        <span asp-validation-for="CursoId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
