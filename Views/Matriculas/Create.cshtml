@model SistemaAcademico.Models.Matricula
<h2>Registrar Nueva Matrícula</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label>Estudiante</label>
        <select asp-for="EstudianteId" class="form-select" asp-items="@(ViewBag.Estudientes)"></select>
    </div>

    <div class="mb-3">
        <label>Curso</label>
        <select asp-for="CursoId" class="form-select" asp-items="@(ViewBag.Cursos)"></select>
    </div>

    <button type="submit" class="btn btn-success">Registrar</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>
