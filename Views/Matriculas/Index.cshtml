<div class="welcome">Gestiona las matrículas y cursos inscritos</div>
<div class="flex-container">
    <a asp-action="Create" class="btn btn-success">Nueva Matrícula</a>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Volver al Panel</a>
</div>
@model IEnumerable<SistemaAcademico.Models.Matricula>
@{
    ViewData["Title"] = "Matrículas";
}

<h2 class="text-center mb-3">Registrar y administrar matrículas de estudiantes</h2>

<div style="display:flex; justify-content:center; gap:15px; flex-wrap:wrap;">
    <a asp-action="Create" class="btn btn-success btn-lg">Nueva Matrícula</a>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary btn-lg">Volver al Panel</a>
</div>

<hr />

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Id</th>
            <th>Estudiante</th>
            <th>Curso</th>
            <th>Fecha Matrícula</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.MatriculaId</td>
                <td>@m.Estudiante?.Nombre</td>
                <td>@m.Curso?.Nombre</td>
                <td>@m.FechaMatricula.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@m.MatriculaId" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
