@model IEnumerable<SistemaAcademico.Models.Matricula>
@{
    ViewData["Title"] = "Matrículas";
}

<!-- Mensaje de bienvenida -->
<div class="text-center mb-4">
    <h2>Bienvenido al módulo de Matrículas</h2>
    <p>Registra y administra matrículas de estudiantes fácilmente.</p>
</div>

<!-- Botones grandes -->
<div class="d-flex justify-content-center gap-3 mb-4 flex-wrap">
    <a asp-action="Create" class="btn btn-primary btn-lg shadow btn-hover">Nueva Matrícula</a>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary btn-lg shadow btn-hover">Volver al Panel</a>
</div>

<hr />

<!-- Tabla de datos -->
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Estudiante</th>
            <th>Curso</th>
            <th>Fecha Matrícula</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.MatriculaId</td>
                <td>@m.Estudiante?.Nombre</td>
                <td>@m.Curso?.Nombre</td>
                <td>@m.FechaMatricula.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@m.MatriculaId" class="btn btn-warning btn-sm shadow btn-hover">Editar</a>
                    <a asp-action="Delete" asp-route-id="@m.MatriculaId" class="btn btn-danger btn-sm shadow btn-hover">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Estilo hover y sombra para botones (si no está en site.css) -->
<style>
    .btn-hover {
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .btn-hover:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 12px rgba(0,0,0,0.2);
        }
</style>
